# Use Node.js 20 as specified in langgraph.json
FROM node:20-slim

# Set working directory
WORKDIR /app

# Install system dependencies for PDF processing and other requirements
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-dev \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy package files
COPY package*.json ./
COPY yarn.lock ./

# Install dependencies
RUN yarn install --frozen-lockfile

# Copy source code
COPY . .

# Build TypeScript
RUN yarn build

# Expose the port that LangGraph will run on
EXPOSE 2024

# Set environment variables
ENV NODE_ENV=production
ENV PORT=2024

# Start the LangGraph server
CMD ["npx", "@langchain/langgraph-cli", "up", "--host", "0.0.0.0", "--port", "2024"]